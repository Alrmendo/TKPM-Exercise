<script>
    const tableBody = document.getElementById('student-table-body');
    const searchInput = document.getElementById('search-input');
    const body = document.querySelector('body');

    async function startLoading() {
        body.classList.add('loading');
    }

    async function stopLoading() {
        body.classList.remove('loading');
    }

    // Load danh sách sinh viên từ MongoDB
    async function loadStudentsFromAPI() {
        try {
            const response = await fetch('/students');
            const students = await response.json();
            tableBody.innerHTML = ''; // Xóa danh sách cũ trước khi render lại
            students.forEach(addStudentRow);
        } catch (error) {
            console.error("Lỗi tải danh sách sinh viên:", error);
        }
    }

    async function loadEmailDomains() {
        const response = await fetch('/config/email-domains');
        const allowedDomains = await response.json();
        const list = document.getElementById('email-domain-list');
        list.innerHTML = allowedDomains.map(domain =>
            `<li class="flex justify-between items-center border-b py-2">
                ${domain}
                <button onclick="removeEmailDomain('${domain}')" class="bg-red-500 text-white px-2 py-1 rounded">
                    Xóa
                </button>
            </li>`
        ).join('');
    }

    async function addEmailDomain() {
        const input = document.getElementById('email-domain-input');
        const domain = input.value.trim();

        if (!domain) {
            alert("Vui lòng nhập tên miền!");
            return;
        }

        const response = await fetch('/config/email-domains', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ domain })
        });

        if (response.ok) {
            input.value = "";
            loadEmailDomains();
        } else {
            alert("Lỗi khi thêm tên miền!");
        }
    }

    async function removeEmailDomain(domain) {
        if (!confirm(`Bạn có chắc chắn muốn xóa tên miền "${domain}"?`)) return;

        const response = await fetch(`/config/email-domains/${domain}`, { method: 'DELETE' });

        if (response.ok) {
            loadEmailDomains();
        } else {
            alert("Lỗi khi xóa tên miền!");
        }
    }

    document.getElementById('add-email-domain').addEventListener('click', addEmailDomain);
    document.addEventListener('DOMContentLoaded', loadEmailDomains);

    async function loadPhoneCodes() {
        try {
            const response = await fetch('/config/phone-codes');
            const phoneCodes = await response.json();
            const list = document.getElementById('phone-code-list');
            list.innerHTML = phoneCodes.map(code =>
                `<li class="flex justify-between items-center border-b py-2">
                    ${code}
                    <button onclick="removePhoneCode('${code}')" class="bg-red-500 text-white px-2 py-1 rounded">
                        Xóa
                    </button>
                </li>`
            ).join('');
        } catch (error) {
            console.error("Lỗi khi tải danh sách mã quốc gia:", error);
        }
    }

    async function addPhoneCode() {
        const input = document.getElementById('phone-code-input');
        const code = input.value.trim();

        if (!code.startsWith('+')) {
            alert("Mã quốc gia phải bắt đầu bằng dấu '+'. Ví dụ: +84");
            return;
        }

        try {
            const response = await fetch('/config/phone-codes', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ code })
            });

            if (response.ok) {
                input.value = "";
                loadPhoneCodes();
            } else {
                alert("Lỗi khi thêm mã quốc gia!");
            }
        } catch (error) {
            console.error("Lỗi khi thêm mã quốc gia:", error);
        }
    }

    async function removePhoneCode(code) {
        if (!confirm(`Bạn có chắc chắn muốn xóa mã quốc gia "${code}"?`)) return;

        try {
            const response = await fetch(`/config/phone-codes/${code}`, { method: 'DELETE' });

            if (response.ok) {
                loadPhoneCodes();
            } else {
                alert("Lỗi khi xóa mã quốc gia!");
            }
        } catch (error) {
            console.error("Lỗi khi xóa mã quốc gia:", error);
        }
    }

    document.getElementById('add-phone-code').addEventListener('click', addPhoneCode);
    document.addEventListener('DOMContentLoaded', loadPhoneCodes);

    async function loadStatusRules() {
        const response = await fetch('/config');
        const config = await response.json();
        const statusRules = config.statusRules || {};
        const statusSelect = document.getElementById('current-status');
        const ruleList = document.getElementById('status-rule-list');

        // Xóa dữ liệu cũ
        statusSelect.innerHTML = "";
        ruleList.innerHTML = "";

        // Đổ trạng thái vào dropdown
        Object.keys(statusRules).forEach(status => {
            const option = document.createElement("option");
            option.value = status;
            option.textContent = status;
            statusSelect.appendChild(option);
        });

        // Hiển thị danh sách quy tắc
        Object.entries(statusRules).forEach(([currentStatus, nextStatuses]) => {
            const li = document.createElement("li");
            li.className = "flex justify-between items-center border-b py-2";
            li.innerHTML = `<span>${currentStatus} → ${nextStatuses.join(", ") || "Không thể chuyển đổi"}</span>
                <button class="bg-red-500 text-white px-2 py-1 rounded" onclick="removeStatusRule('${currentStatus}')">Xóa</button>`;
            ruleList.appendChild(li);
        });
    }

    async function addStatusRule() {
        const currentStatus = document.getElementById("current-status").value;
        const nextStatus = document.getElementById("next-status").value.trim();

        if (!nextStatus) {
            alert("Vui lòng nhập trạng thái mới!");
            return;
        }

        const response = await fetch('/config');
        let config = await response.json();

        if (!config.statusRules[currentStatus]) {
            config.statusRules[currentStatus] = [];
        }

        if (!config.statusRules[currentStatus].includes(nextStatus)) {
            config.statusRules[currentStatus].push(nextStatus);
        }

        await fetch('/config', {
