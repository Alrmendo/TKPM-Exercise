<header class="bg-blue-600 text-white py-4 shadow-md">
    <div class="w-[95%] mx-auto px-4">
        <h1 class="text-2xl font-bold">Quản Lý Danh Sách Sinh Viên</h1>
    </div>
</header>

<section class="bg-gray-100 p-4 rounded flex justify-center">
    <p class="text-sm text-gray-700 flex gap-2">
        Phiên bản: <span id="app-version">Đang tải...</span> |
        Ngày build: <span id="app-build-date">Đang tải...</span>
    </p>
</section>

<main class="w-[95%] mx-auto px-1 py-6">
    <!-- Bật/Tắt Quy Định -->
    <section class="bg-white p-6 rounded shadow-md mb-6">
        <h2 class="text-lg font-bold mb-4">Bật/Tắt Quy Định</h2>
        <label class="flex items-center cursor-pointer">
            <span class="mr-2">Áp dụng quy định:</span>
            <input type="checkbox" id="toggle-rules" class="toggle-checkbox">
        </label>
    </section>

    <!-- Import/Export -->
    <section class="bg-white p-6 rounded shadow-md mb-6">
        <h2 class="text-lg font-bold mb-4">Import/Export Dữ Liệu</h2>

        <div class="flex gap-4">
            <button id="export-btn" class="bg-[#f60] text-white px-4 py-2 rounded hover:bg-[#e65100] cursor-pointer">
                Export
            </button>
        </div>

        <!-- Popup chọn loại export -->
        <div id="export-popup" class="fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center hidden">
            <div class="bg-white p-6 rounded shadow-lg w-80">
                <h3 class="text-lg font-bold mb-4">Chọn định dạng xuất</h3>
                <select id="export-type" class="w-full border border-gray-300 rounded px-3 py-2 mb-4 cursor-pointer">
                    <option value="json">JSON</option>
                    <option value="excel">Excel</option>
                </select>
                <div class="flex justify-end space-x-2">
                    <button id="cancel-export"
                        class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 cursor-pointer">
                        Hủy
                    </button>
                    <button id="confirm-export"
                        class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer">
                        OK
                    </button>
                </div>
            </div>
        </div>

        <!-- Form nhập file -->
        <form id="import-form" enctype="multipart/form-data" class="mt-4 flex items-center gap-4">
            <input type="file" id="import-file" accept=".csv, .json, .xlsx"
                class="border border-gray-300 rounded px-3 py-2 cursor-pointer">
            <button type="submit" class="bg-[#117A65] text-white px-4 py-2 rounded hover:bg-[#0f6659] cursor-pointer">
                Import
            </button>
        </form>
    </section>


    <section class="bg-white p-6 rounded shadow-md mb-6">
        <h2 class="text-lg font-bold mb-4">Cấu hình tên miền email hợp lệ</h2>
        <input type="text" id="email-domain-input" class="border border-gray-300 rounded px-3 py-2"
            placeholder="Nhập tên miền...">
        <button id="add-email-domain" class="bg-blue-600 text-white px-4 py-2 rounded">Thêm</button>

        <ul id="email-domain-list" class="mt-4"></ul>
    </section>

    <section class="bg-white p-6 rounded shadow-md mb-6">
        <h2 class="text-lg font-bold mb-4">Cấu hình mã quốc gia hợp lệ</h2>
        <input type="text" id="phone-code-input" class="border border-gray-300 rounded px-3 py-2"
            placeholder="Nhập mã quốc gia...">
        <button id="add-phone-code" class="bg-blue-600 text-white px-4 py-2 rounded">Thêm</button>
        <ul id="phone-code-list" class="mt-4"></ul>
    </section>

