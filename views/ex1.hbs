        <div class="mb-4">
            <label for="current-status" class="block font-medium">Chọn trạng thái hiện tại</label>
            <select id="current-status" class="w-full border border-gray-300 rounded px-3 py-2">
                <!-- Tự động load danh sách trạng thái -->
            </select>
        </div>
        <div class="mb-4">
            <label for="next-status" class="block font-medium">Trạng thái có thể chuyển đổi</label>
            <input type="text" id="next-status" class="border border-gray-300 rounded px-3 py-2"
                placeholder="Nhập trạng thái mới...">
            <button id="add-status-rule" class="bg-blue-600 text-white px-4 py-2 rounded">Thêm</button>
        </div>
        <ul id="status-rule-list" class="mt-4"></ul>
    </section>

    <!-- Form thêm sinh viên  -->
